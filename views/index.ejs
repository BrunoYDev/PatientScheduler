<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dashboard</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
</head>
<body>
    <button class="btn btn-success" onclick="newAppointment()">New Appointment</button>
    <button class="btn btn-success" onclick="listAllAppo()">List All Appointments</button>
    <div id="calendar">

    </div>
</body>
<script src='https://cdn.jsdelivr.net/npm/fullcalendar@6.1.15/index.global.min.js'></script>
<script>

    let calendarEle = document.getElementById("calendar");

    let calendar = new FullCalendar.Calendar(calendarEle, {
        initialView: 'dayGridMonth',
        locale: 'en-us',
        events: 'getappointments',
        eventClick: function(info){
            window.location.href = `/appointment/${info.event.id}`;
        }
    });

    calendar.render();

    function newAppointment(){
        window.location.href = `/register`;
    }

    function listAllAppo(){
        window.location.href = `/list`;
    }

</script>
</html>